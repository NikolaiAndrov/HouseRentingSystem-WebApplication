{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=HouseRentingSystem;Trusted_Connection=True;TrustServerCertificate=True;MultipleActiveResultSets=true"
  },

  "Identity": {
    "SignIn": {
      "RequireConfirmedAccount": true
    },

    "Password": {
      "RequireUppercase": true,
      "RequireLowercase": true,
      "RequireNonAlphanumeric": true,
      "RequireDigit": true,
      "RequiredLength": 8
    }
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}